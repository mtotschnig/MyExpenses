<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            style="@style/FormLabel"
            android:layout_height="wrap_content"
            android:labelFor="@id/Filename"
            android:text="@string/import_source_file" />

        <LinearLayout
            style="@style/FormField"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Filename"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:focusable="false"
                android:importantForAutofill="no"
                android:inputType="none" />

            <ImageView
                android:id="@+id/btn_browse"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tooltipText="@string/content_description_browse_device_files"
                android:contentDescription="@string/content_description_browse_device_files"
                app:srcCompat="@drawable/ic_folder"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/btn_list"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tooltipText="@string/content_description_select_recent_file"
                android:contentDescription="@string/content_description_select_recent_file"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_list"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>
    </TableRow>

</merge>