<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="headingStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="headingStyle.WithMargin">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="headingStyle.WithMargin.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="newHeadingStyle">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="about_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorLink">@drawable/linkcolor</item>
    </style>

    <style name="FormLabel">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/accessibility_clickable_minimum</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="FormField">
        <item name="android:minHeight">@dimen/accessibility_clickable_minimum</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">@dimen/form_table_ratio</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FormField.Dialog">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="FormField.Dialog.Scrollable">
        <item name="android:layout_weight">2</item>
        <item name="android:scrollbarFadeDuration">500</item>
    </style>

    <style name="FormLabel.Condensed">
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton.Dense">
        <item name="android:minWidth">@dimen/accessibility_clickable_minimum</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton.ToggleGroupVertical">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_text" />

    <style name="dialog_text.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_text.bold.warning">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorErrorDialog</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="drawableStartCompat">@drawable/ic_warning</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2sp</item>
    </style>

    <style name="SmallButton.FormField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">@dimen/form_table_ratio</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SwitchTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.Switch">
        <!-- the switch color is set to contrast with the window background, hence we need inverse text color -->
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="ExpandableListRow">
        <item name="android:paddingEnd">@dimen/general_padding</item>
        <item name="android:paddingStart">?android:attr/expandableListPreferredItemPaddingLeft</item>
    </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Material3.App</item>
    </style>

    <style name="MaterialAlertDialog.Material3.App">
        <item name="backgroundInsetTop">@dimen/mtrl_alert_dialog_background_inset_vertical</item>
        <item name="backgroundInsetBottom">@dimen/mtrl_alert_dialog_background_inset_vertical</item>
    </style>

    <style name="CaldroidCustomBase" parent="@style/CaldroidDefault" />

    <style name="CaldroidCustom" parent="CaldroidCustomBase">
        <item name="styleCaldroidGridView">@style/CaldroidCustomGridView</item>
    </style>

    <style name="CaldroidCustomGridView">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/caldroid_custom_gridview_background</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="MySpinnerItemStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:minHeight">@dimen/accessibility_clickable_minimum</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalculatorButtonBase" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/calculator_button_min</item>
        <item name="android:minWidth">@dimen/calculator_button_min</item>
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/calculator_button_layout_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/calculator_button_layout_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/calculator_button_layout_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/calculator_button_layout_margin_horizontal</item>
    </style>

    <style name="CalculatorButton" parent="CalculatorButtonBase">
        <item name="android:padding">0dp</item>
    </style>

    <style name="CalculatorButton.Dot">
        <item name="android:contentDescription">@string/decimal_separator</item>
    </style>

    <style name="CalculatorButton.Add">
        <item name="android:text">@string/calculator_operator_plus</item>
    </style>

    <style name="CalculatorButton.Subtract">
        <item name="android:text">@string/calculator_operator_minus</item>
    </style>

    <style name="CalculatorButton.Multiply">
        <item name="android:text">@string/calculator_operator_multiply</item>
    </style>

    <style name="CalculatorButton.Divide">
        <item name="android:text">@string/calculator_operator_divide</item>
    </style>

    <style name="CalculatorButton.PlusMinus">
        <item name="android:text">±</item>
    </style>

    <style name="CalculatorButton.Clear">
        <item name="android:textColor">#f26522</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">C</item>
        <item name="android:contentDescription">@string/reset_all</item>
    </style>

    <style name="CalculatorButton.Delete">
        <item name="android:text">⌫</item>
        <item name="android:contentDescription">
            @string/content_description_calculator_delete_button
        </item>
    </style>

    <style name="CalculatorButton.Result">
        <item name="android:textColor">#39b54a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">=</item>
    </style>

    <style name="LicenceLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LicencePrice">
        <item name="android:textAppearance">@style/AdaptiveLabelTextAppearance</item>
    </style>

    <style name="SelectLicenceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/SelectLicenceButtonTheme</item>
    </style>

    <style name="SelectLicenceButtonTheme">
        <item name="colorControlActivated">?android:textColorPrimary</item>
    </style>

    <style name="FeatureList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/general_padding</item>
        <item name="android:paddingEnd">@dimen/general_padding</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="OnboardingInputLabel">
        <item name="android:textAppearance">@style/AdaptiveLabelTextAppearance</item>
        <item name="android:layout_marginTop">@dimen/suw_description_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/suw_description_margin_bottom</item>
    </style>

    <style name="AdaptiveLabelTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/textSizeLabel</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox" />

    <style name="OnBoardingDisplayProperty">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="OnboardingSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/accessibility_clickable_minimum</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">-8dp</item>
    </style>

    <style name="RecurrenceRowRecurrence">
        <item name="layout_constraintEnd_toStartOf">@id/LastDay</item>
    </style>

    <style name="RecurrenceRowLastDay">
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="RecurrenceRowDateButton" parent="SmallButton">
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/Recurrence</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleTextAppearance</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="SimpleDialog" parent="MyAlertDialogTheme">
        <item name="textInputStyle">@style/SimpleDialogTextInputStyle</item>
    </style>

    <style name="SimpleDialogTextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconMode">none</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="SnackBarTheme">
        <item name="colorAccent">?colorPrimaryInverse</item>
    </style>

    <style name="CrashDialogTheme" parent="@android:style/Theme.Material.Dialog" />

    <style name="WidgetActionButton">
        <item name="android:layout_width">@dimen/accessibility_clickable_minimum</item>
        <item name="android:layout_height">@dimen/accessibility_clickable_minimum</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="WidgetActionButton.Navigation">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AccountWidgetPreview" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widgetLine1">@string/default_account_name</item>
        <item name="widgetNote">$1,000.00</item>
        <item name="widgetCommand1">@drawable/ic_menu_add</item>
        <item name="widgetCommand2">@drawable/ic_menu_forward</item>
    </style>

    <style name="TemplateWidgetPreview" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widgetLine1">@string/testData_transaction2Comment</item>
        <item name="widgetNote">@string/testData_account1Description</item>
        <item name="widgetCommand1">@drawable/ic_action_apply_save</item>
        <item name="widgetCommand2">@drawable/ic_action_apply_edit</item>
    </style>

    <style name="WidgetDayNight" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widgetLine1" />
        <item name="widgetNote" />
        <item name="widgetCommand1" />
        <item name="widgetCommand2" />
        <item name="colorIncome">@color/colorIncome</item>
        <item name="colorExpense">@color/colorExpense</item>
    </style>
    <style name="WidgetDark" parent="Theme.Material3.Dark">
        <item name="widgetLine1" />
        <item name="widgetNote" />
        <item name="widgetCommand1" />
        <item name="widgetCommand2" />
        <item name="colorIncome">@color/colorIncomeLight</item>
        <item name="colorExpense">@color/colorExpenseLight</item>
    </style>
    <style name="WidgetLight" parent="Theme.Material3.Light">
        <item name="widgetLine1" />
        <item name="widgetNote" />
        <item name="widgetCommand1" />
        <item name="widgetCommand2" />
        <item name="colorIncome">@color/colorIncomeDark</item>
        <item name="colorExpense">@color/colorExpenseDark</item>
    </style>

    <style name="MyPreferenceHeaderTheme" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/Preference.Material.SingleLineTitle</item>
    </style>
    <style name="Preference.Material.SingleLineTitle">
        <item name="singleLineTitle">true</item>
    </style>

    <style name="AttachmentStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="AttachmentStyle.Selectable">
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">#FF888888</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="AttachmentStyle.MultipleChoice">
        <item name="strokeWidth">8dp</item>
        <item name="strokeColor">@color/attachment_multiple_choice_stroke_color</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="BudgetWidgetHeader">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="BudgetWidgetCell">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="FullscreenDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>
