<resources>

    <style name="MyThemeBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/myColorBackground</item>
        <item name="android:windowBackground">@color/myColorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/toolbarBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="md_color_button_text">?colorAccent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="simpleDialogTheme">@style/SimpleDialog</item>

    </style>

    <style name="MyTheme" parent="MyThemeBase" />

    <style name="MyTheme.Main" />

    <style name="DarkBackground">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="LightBackground">
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="EditDialogBase" parent="Theme.MaterialComponents.DayNight.DialogWhenLarge">
        <item name="android:colorBackground">@color/myColorBackground</item>
        <item name="android:windowBackground">@color/myColorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/toolbarBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="md_color_button_text">?colorAccent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="simpleDialogTheme">@style/SimpleDialog</item>
    </style>

    <style name="EditDialog" parent="EditDialogBase" />

    <style name="MyTheme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Translucent" parent="MyTheme.Translucent">
        <item name="popupMenuStyle">@style/LegacyPopupMenuStyle</item>
    </style>

    <style name="OnboardingBase" parent="@style/SuwThemeMaterial">
        <item name="android:colorBackground">@color/myColorBackground</item>
        <item name="android:windowBackground">@color/myColorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/toolbarBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_color_button_text">?colorAccent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="simpleDialogTheme">@style/SimpleDialog</item>
    </style>

    <style name="Onboarding" parent="OnboardingBase" />

    <style name="Calculator" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AmountSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorIncome</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorExpense</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorExpense</item>
    </style>

    <style name="WidgetConfiguration" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>