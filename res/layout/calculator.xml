<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:padding="3dp"
	android:layout_margin="0dp">
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<TextView android:background="@drawable/textfield_default"
			android:paddingRight="8dp" android:id="@+id/result"
			android:singleLine="true" android:textColor="#000000"
			android:layout_width="fill_parent"
			android:text="0" android:layout_height="64dp" android:gravity="right" android:textSize="36sp" android:paddingTop="12dp"/>
		<TextView android:id="@+id/op" android:layout_width="wrap_content"
			android:text="" android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp" android:textSize="20sp" android:layout_marginTop="-2dp"/>
	</RelativeLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_gravity="center">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="7"
			android:minWidth="@dimen/calculator_button_small" android:minHeight="@dimen/calculator_button_small"
			android:textSize="18sp" android:id="@+id/b7" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:id="@+id/b8" android:text="8" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="9" android:id="@+id/b9" />
		<Button android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
      android:textSize="18sp"
      android:text="0" android:id="@+id/b0" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="+" android:id="@+id/bAdd" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="C" android:id="@+id/bClear" android:textStyle="bold"
			android:textColor="#f26522" />
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_gravity="center">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:id="@+id/b4" android:text="4" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="5" android:id="@+id/b5" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="6" android:id="@+id/b6" />
    <Button android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
      android:textSize="18sp"
      android:text="Â±" android:id="@+id/bPlusMinus" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="-" android:id="@+id/bSubtract" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:id="@+id/bDelete" android:text="&lt;" />
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_gravity="center">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="1" android:id="@+id/b1" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="2" android:id="@+id/b2" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="3" android:id="@+id/b3" />
    <Button android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
      android:textSize="18sp"
      android:text="." android:id="@+id/bDot" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="*" android:id="@+id/bMultiply" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="%" android:id="@+id/bPercent" />
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_gravity="right">
		<Button android:layout_weight="1" android:id="@+id/bOK" android:text="ok"
      android:textSize="18sp"
      android:layout_height="wrap_content" android:layout_width="0dp"/>
    <Button android:layout_height="wrap_content" android:layout_weight="1"
      android:textSize="18sp"
      android:id="@+id/bCancel" android:text="cancel" android:layout_width="0dp"/>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="/" android:id="@+id/bDivide" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/calculator_button_small"
			android:textSize="18sp"
			android:text="=" android:id="@+id/bResult" android:textColor="#39b54a"
			android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>
