<ScrollView android:id="@+id/aboutscrollview" xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">    
  <LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
	   <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_centerInParent="true">
      <Button
          style="@style/button"
          android:onClick="handleHelp"
          android:text="@string/tutorial"
          android:id="@id/TUTORIAL_COMMAND"/>
        <Button
          style="@style/button"
          android:onClick="handleHelp"
          android:id="@id/CHANGES_COMMAND" 
          android:text="@string/menu_changes" />
        <Button
          style="@style/button"
          android:onClick="handleHelp"
          android:id="@id/FAQ_COMMAND" 
          android:text="FAQ" />
        <Button
          style="@style/button"
          android:onClick="handleHelp"
          android:id="@id/NEWS_COMMAND" 
          android:text="News" />
    </LinearLayout>
    </RelativeLayout>
    <TextView android:text="@string/help_leading" style="@style/about_heading" />
    <TextView android:text="@string/help_intro" style="@style/about_text" />
    <TextView android:text="@string/help_heading_quick_guide" style="@style/about_heading" />
    <TextView android:text="@string/help_quick_guide"
      android:id="@+id/help_quick_guide"
      style="@style/about_text" />
    <TextView android:text="@string/help_heading_version" style="@style/about_heading" />      
    <TextView android:id="@+id/aboutVersionCode" style="@style/about_text" />  
    <TextView android:text="@string/help_heading_license" style="@style/about_heading" />
    <TextView android:text="GNU General Public License version 3" style="@style/about_text" />  
    <TextView android:text="@string/help_licence_gpl"
      android:id="@+id/help_licence_gpl"
        style="@style/about_text" />
    <TextView android:text="@string/help_licence_glyphish"
        style="@style/about_text" />
    <TextView android:text="@string/help_licence_quickactions"
        style="@style/about_text" />                           
    <TextView android:text="@string/help_heading_project_home"
        style="@style/about_heading" />
    <TextView android:text="@string/help_project_home"
        android:id="@+id/help_project_home"
        style="@style/about_text" />          
    <TextView android:text="@string/help_heading_feedback"
        style="@style/about_heading" />
    <TextView android:text="@string/help_feedback"
        android:id="@+id/help_feedback"
	      style="@style/about_text" />
    <TextView android:text="@string/help_heading_credits"
	      style="@style/about_heading" />
    <TextView android:text="@string/credits_text"
				style="@style/about_text" />
	  <TextView android:text="@string/help_enjoy"
        style="@style/about_heading" />
  </LinearLayout>
</ScrollView>

