<!-- inspired by Financisto -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	android:layout_weight="1" android:background="@drawable/widget_background_gray"
	android:id="@+id/layout">
  <LinearLayout
  	android:layout_marginLeft="5dp"
  	android:layout_width="wrap_content" android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:id="@+id/navigation"
    android:layout_alignParentLeft="true">
	<ImageView android:id="@+id/up_icon"
		android:layout_weight="1"
		android:layout_width="wrap_content" android:layout_height="0dp"
		android:src="@android:drawable/arrow_up_float"  />
	 <ImageView android:id="@+id/down_icon"
    android:layout_weight="1"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content" android:layout_height="0dp"
    android:src="@android:drawable/arrow_down_float" android:layout_marginRight="3dp" />
  </LinearLayout>
  <ImageView android:id="@+id/divider3" android:layout_width="1dp"
    android:layout_marginRight="10dp"    android:layout_marginLeft="10dp"  
    android:layout_height="match_parent" android:background="@drawable/widget_divider"
    android:contentDescription="@null" android:layout_toRightOf="@+id/navigation" />
  <LinearLayout
    android:layout_toRightOf="@+id/divider3"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">
	<TextView android:id="@+id/line1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:singleLine="true"
		android:textColor="#ffffff"
		android:textStyle="bold" android:ellipsize="end"
		android:textSize="14sp" android:layout_marginTop="3dp"/>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/note" android:textSize="12sp" />
	</LinearLayout>
  <ImageView android:id="@+id/divider2" android:layout_width="1dp"
    android:layout_marginRight="10dp"    android:layout_marginLeft="10dp"  
    android:layout_height="match_parent" android:background="@drawable/widget_divider"
    android:contentDescription="@null" android:layout_toLeftOf="@+id/add_transaction" />
	<ImageView android:id="@+id/add_transaction"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:src="@drawable/create_transaction_icon"
    android:layout_toLeftOf="@+id/divider1" />
	<ImageView android:id="@+id/divider1" android:layout_width="1dp"
		android:layout_marginRight="10dp"    android:layout_marginLeft="10dp"  
		android:layout_height="match_parent" android:background="@drawable/widget_divider"
		android:contentDescription="@null" android:layout_toLeftOf="@+id/add_transfer" />

	<ImageView android:id="@+id/add_transfer"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:src="@drawable/create_transfer_icon"
		android:layout_marginRight="5dp" android:layout_alignParentRight="true" />
</RelativeLayout>